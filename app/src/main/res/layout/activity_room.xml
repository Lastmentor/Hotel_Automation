<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#455a64"
    tools:context="com.example.rza.socialmedialogins.Room">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Room Information"
        android:textColor="#FFF"
        android:textSize="34dp" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hotelroom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Rtxt2"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Cleaning Date"
                android:textSize="25dp"
                android:textColor="#FFF"/>
            <TextView
                android:id="@+id/temizlikDate"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FFF"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/sendRequest"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#123"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Request Room Clean"
                android:textSize="20dp"
                android:textColor="#FFF"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
