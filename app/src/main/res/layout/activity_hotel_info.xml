<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#455a64"
    tools:context="com.example.rza.socialmedialogins.HotelInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Hotel Info"
        android:textColor="#FFF"
        android:textSize="34dp" />

    <ScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="207dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/photel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="KulePark Hotel"
                    android:textColor="#FFF"
                    android:textSize="30dp" />
                <android.support.v7.widget.CardView
                    android:layout_gravity="center_horizontal"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="340dp"
                    app:cardBackgroundColor="#f5fffa"
                    android:layout_height="140dp">
                    <TextView
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Hotel_text"
                        android:textColor="#1B2631"
                        android:textSize="15sp"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Contact Details"
                    android:textColor="#FFF"
                    android:textSize="30dp" />
                <android.support.v7.widget.CardView
                    android:layout_gravity="center_horizontal"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="340dp"
                    app:cardBackgroundColor="#f5fffa"
                    android:layout_height="185dp">
                <EditText
                    android:id="@+id/txttel"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_call"
                    android:inputType="none"
                    android:hint="+90 538 827 55 22"
                    android:textColorHint="#1B2631"
                    android:drawablePadding="15dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/txtmail"
                    android:focusable="false"
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_mail"
                    android:inputType="none"
                    android:hint="kuleparkinfo@hotmail.com"
                    android:textColorHint="#1B2631"
                    android:drawablePadding="15dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:focusable="false"
                    android:id="@+id/txtlocal"
                    android:layout_marginTop="120dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_location"
                    android:inputType="none"
                    android:hint="Ä°zmir / Turkey"
                    android:textColorHint="#1B2631"
                    android:drawablePadding="15dp"
                    android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Location"
                    android:textColor="#FFF"
                    android:textSize="30dp" />
                <android.support.v7.widget.CardView
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="340dp"
                    app:cardBackgroundColor="#f5fffa"
                    android:layout_height="260dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
